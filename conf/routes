# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application Urls
GET     /                           controllers.ApplicationController.index()
GET     /about                      controllers.ApplicationController.about()
POST    /search                     controllers.SearchController.search()
GET    /search/category/:category   controllers.SearchController.searchByCategory(category:String)
#POST    /search                    controllers.SearchController.searchShop()
#POST    /search/found              controllers.SearchController.searchResult(p:Int ?= 0, s ?= "name", o ?= "asc",keyword ?= "")

# Shop Urls
GET      /shop/viewall              controllers.ShopController.viewAll(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
GET	     /shop/create				controllers.ShopController.blank()
GET      /shop/profile/:id          controllers.ShopController.profile(id:Long)
GET     /shop/category              controllers.ShopController.displayCategory()
POST     /shop/create               controllers.ShopController.submit()

GET    /shop/edit/:id                controllers.ShopController.edit(id:Long)
POST    /shop/update/:id              controllers.ShopController.update(id:Long)

GET      /shop/delete/:id                	controllers.ShopController.delete(id:Long)

GET      /shop/:id                	controllers.ShopController.display(id:Int)
GET      /shop/found/:id            controllers.ShopController.profileFound(id:Long)




# User Urls
GET    /user/login                  controllers.UserController.login()
POST   /user/login                  controllers.UserController.authenticate()
GET   /user/logout			        controllers.UserController.logout()

GET	    /user/create				controllers.UserController.blank()
POST    /user/create                controllers.UserController.submit()
GET    /user/account                controllers.UserController.account()

GET    /user/edit/:id                controllers.UserController.edit(id:Long)
POST   /user/update/:id              controllers.UserController.update(id:Long)



#POST	/user/update/:id			controllers.UserController.update(id:Int)
#POST 	/user/delete/:id			controllers.UserController.delete(id:Int)

# Product Urls

GET    /product/addProduct          controllers.ProductController.addProduct()
GET    /product/add                 controllers.ProductController.blank()
POST   /product/save                controllers.ProductController.save()
GET   /product/delete/:id           controllers.ProductController.delete(id:Long)
GET   /product/show/:id           controllers.ProductController.showProducts(id:Long)
#GET   /product/delete               controllers.ProductController.afterDeletion()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
